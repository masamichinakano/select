<div class="top-session-image">
  <div class="top-session-wrap">
    <div class="player-header-wrap">
      <%= render "shared/second_header" %>
      <div class="player-header-contents">
        <div class="session-header-logo-warap">
          <h1><%= link_to "select", root_path, class:"player-header-logo" %></h1>
        </div>
      </div>
    </div>

    <%= render "shared/header" %>
    <%= form_with model: @user, url: user_registration_path, class: "registration", local: true do |f| %>

      <div class="registration-contents">
        <div class="registration-header-form-group">
         <%= render "devise/shared/error_messages", model: f.object %>
          <div class='form-header-text-wrap'>
            <label class="registration-header-form-text">新規会員登録</label>
          </div>
        </div>

        <div class="registration-form-group">
          <div class='s-form-text-wrap'>
            <label class="registration-form-text">氏名（フルネーム）</label>
          </div>
          <%= f.text_field :name, class:"registration-form-field", placeholder:"山田太郎" %>
        </div>
        <div class="registration-form-group">
          <div class='s-form-text-wrap'>
            <label class="registration-form-text">メールアドレス</label>
          </div>
          <%= f.email_field :email, class:"registration-form-field", placeholder:"victory@com" %>
        </div>
        <div class="registration-form-group">
          <div class='s-form-text-wrap'>
            <label class="registration-form-text">パスワード</label>
          </div>
          <%= f.password_field :password, class:"registration-form-field", placeholder:"6文字以上の半角英数字" %>
        </div>
        <div class="registration-form-group">
          <div class='s-form-text-wrap'>
            <label class="registration-form-text">パスワード（確認用）</label>
          </div>
          <%= f.password_field :password_confirmation, class:"registration-form-field", placeholder:"同じパスワードを入力して下さい" %>
        </div>
        <div class='register-btn'>
          <%= f.submit "会員登録", class:"registration-send" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
