<div class="top-session-image">
  <div class="top-session-wrap">

  <%= render "shared/header" %>
    <%= form_with model: @user, url: user_registration_path, class: "registration", local: true do |f| %>

      <div class="registration-contents">
       <%= render "devise/shared/error_messages"%>
        <div class="registration-form-group">
          <div class='form-text-wrap'>
            <label class="registration-form-text">氏名（フルネーム）</label>
          </div>
          <%= f.text_field :name, class:"session-field", placeholder:"山田太郎" %>
        </div>
        <div class="registration-form-group">
          <div class='form-text-wrap'>
            <label class="registration-form-text">メールアドレス</label>
          </div>
          <%= f.email_field :email, class:"session-field", placeholder:"victory@com" %>
        </div>
        <div class="registration-form-group">
          <div class='form-text-wrap'>
            <label class="registration-form-text">パスワード</label>
          </div>
          <%= f.password_field :password, class:"session-field", placeholder:"6文字以上の半角英数字" %>
        </div>
        <div class="registration-form-group">
          <div class='form-text-wrap'>
            <label class="registration-form-text">パスワード（確認用）</label>
          </div>
          <%= f.password_field :password_confirmation, class:"session-field", placeholder:"同じパスワードを入力して下さい" %>
        </div>
        <div class='register-btn'>
          <%= f.submit "会員登録", class:"session-send" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>
<%= render "shared/footer" %>