              <td>
                <%= f.text_field :ninth_sa_inning, id:"ninth-sa-score-field", class:"score-field" %>
              </td>
              <th class="total-wrap">
                <span id="sa-total"></span>
              </th>
            </tr>
          </table>
        </div>
        <div class="front-set-wrap">
          <input type="submit" value="保存する" class="front-set-btn">
        </div>
      </div>
    <% end %>
  </div>
</div>
