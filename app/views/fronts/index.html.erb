              </td>
              <td>
                <%= f.text_field :eighth_fa_inning, id:"eighth-fa-score-field", class:"score-field" %>
              </td>
              <td>
                <%= f.text_field :ninth_fa_inning, id:"ninth-fa-score-field", class:"score-field" %>
              </td>
