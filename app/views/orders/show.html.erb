<div class="order-main-image">
  <div class="top-session-wrap">

    <%= render "shared/header" %>
    <div class="defence-main-wrap">
      <div class="offence-main-wrap">
        <div class="match-form-group">
          <div class='match-form-text-wrap'>
            <p class="user-name"><%= current_user.name %></p>
            <label class="form-text"> VS </label>
            <p class="match-name"><%= @match.match_name %></p>
          </div>
          <div class='match-form-date-wrap'>
            <p class="year-date-field"><%= @match.year.name %></p>
            <label class="form-text">年</label>
            <p class="date-field"><%= @match.month.name %></p>
            <label class="form-text">月</label>
            <p class="date-field"><%= @match.day.name %></p>
            <label class="form-text">日</label>
          </div>
          <div class="offence-set-wrap">
            <input type="submit" value="保存する" class="order-create-btn">
          </div>
        </div>
          
        <div class="offence-wrap">
          <table class="offence-members">
            <tr>
              <th class="batting-order">打順</th>　
              <th class="start-order-names">選手名</th>
            　<th class="positioning">守</th>
            </tr>
            <tr>
              <td>１</td>
              <% @members.each do |member| %>
                <% @firsts.each do |first| %>
                  <% if @match.id == first.match_id && first.first_name_id == member.id %>
                  <td class="member-select"><%= member.name %></td>
                  <% end %>
                <% end %>
              <% end %>
              <% @firsts.each do |first| %>
                <% if @match.id == first.match_id %>
                <td class="position-select"><%= first.first_position.name %></td>
                <% end %>
              <% end %>
            </tr>
            <tr>
              <td>２</td>
              <% @members.each do |member| %>
                <% @seconds.each do |second| %>
                  <% if @match.id == second.match_id && second.second_name_id == member.id %>
