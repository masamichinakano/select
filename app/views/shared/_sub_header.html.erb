<header class="sub-header">  
    <div id="nav-drawer">
      <input id="nav-input" type="checkbox" class="nav-unshown">
      <label id="nav-open" for="nav-input"><span></span></label>
      <label class="nav-unshown" id="nav-close" for="nav-input"></label>
      <div id="nav-content">
        <div class="sub-header-lists">
          <% if user_signed_in? %>
            <ul class="sub-list-contents">
              <li><%= link_to current_user.name, "#", class:"sub-my-page" %></li>
              <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"sub-log-out" %></li>
            </ul>
          <% else %>
            <ul class="sub-list-contents">
              <li><%= link_to "ログイン", user_session_path, class:"sub-log-in" %></li>
              <li><%= link_to "新規登録", new_user_registration_path, class:"sub-session" %></li>
            </ul>
          <% end %>
        </div>
        <div>
          <div class="sub-member-header">
            <p>選手一覧</p>
          </div>

          <ul class="sub-position-lists">
            <li class="sub-position-list">
              <%= link_to "投手", pitch_members_path, class:"sub-pitch-players-btn" %>
            </li>
            <li class="sub-position-list">
              <%= link_to "捕手", catch_members_path, class:"sub-catch-players-btn" %>
            </li>
            <li class="sub-position-list">
              <%= link_to "内野手", inside_members_path, class:"sub-inside-players-btn" %>
            </li>
            <li class="sub-position-list">
              <%= link_to "外野手", outside_members_path, class:"sub-outside-players-btn" %>
            </li>
            <li class="sub-position-list">
              <%= link_to "選手一覧", player_members_path, class:"sub-select-all-players-btn" %>
            </li>

          </ul>
        </div>  


      </div>
    </div>
</header>
