<%= render "shared/header" %>
<%= form_with model: @team, url: teams_path, class: "registration", local: true do |f| %>

  <div class="main-registration-contents">
    <div class="team-name-wrap">
      <div class="form-header-text">
        チーム登録
      </div>
    </div>
    <div class="team-group">
      <div class='team-text-wrap'>
        <label class="team-text">チーム名</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :team_name, class:"team-text-field", placeholder:"山田太郎" %>
    </div>
    
    <div class='register-btn'>
      <%= f.submit "チーム登録", class:"register-send" %>
    </div>
  </div>
<% end %>
<%= render "shared/footer" %>