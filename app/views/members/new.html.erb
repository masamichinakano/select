<%= render "shared/header" %>

<%= form_with model: @member, url: members_path, class:"registration", local: true do |f| %>
  <div class="main-registration-contents">
    <div class="form-wrap">
      <div class="form-header-text">
        選手情報入力
      </div>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">選手画像</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.file_field :image, class:"small-field", id:"member_image" %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">名前</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :name, placeholder:"山田　太郎", class:"small-field", id:"member_name" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">年齢</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :age, placeholder:"半角数字を入力してください", class:"small-field"%> 
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">投球　打席</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:style_id, Style.all, :id, :name, {}, {class:"small-field", id:"member_hitting"}) %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">背番号</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :number, placeholder:"半角数字を入力してください", class:"small-field" %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">投手</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.check_box :pitcher_position_id %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">捕手</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.check_box :catcher_position_id %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">内野手</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.check_box :inside_position_id %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">外野手</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.check_box :outside_position_id %>
    </div>
    <div class='register-btn'>
      <%= f.submit "選手登録", class:"register-send" %>
    </div>

  </div>
<% end %>
<%= render "shared/footer" %>